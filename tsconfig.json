{
  "compilerOptions": {
    "target": "es2021",
    "module": "ES2020",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "allowJs": false,
    "noEmit": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["dist/**/*"]
}
